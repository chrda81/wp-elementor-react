{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "resources/ts/**/*.ts",
    "resources/ts/**/*.tsx"
  ],
}